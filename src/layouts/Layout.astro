---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Software Engineer" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>Thomas Huisman</title>
    <script is:inline>
      (function () {
        var key = "theme";
        var d = document.documentElement;
        var stored = null;

        try {
          stored = localStorage.getItem(key);
        } catch (e) {}

        if (stored === "light" || stored === "dark") {
          d.setAttribute("data-theme", stored);
          d.style.colorScheme = stored;
        } else {
          // fallback to system preference
          var prefersDark = window.matchMedia(
            "(prefers-color-scheme: dark)"
          ).matches;
          d.setAttribute("data-theme", prefersDark ? "dark" : "light");
          d.style.colorScheme = prefersDark ? "dark" : "light";
        }
      })();
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --bg-color: #ffffff;
    --text-color: #000000;
    --text-secondary: #666666;
    --border-color: #cccccc;
  }

  :root[data-theme="dark"] {
    --bg-color: #181a1b;
    --text-color: #e8e6e3;
    --text-secondary: #a8a095;
    --border-color: #8c8273;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: "Courier New", "Monaco", "Menlo", "Consolas", monospace;
    background-color: var(--bg-color);
    color: var(--text-color);
    line-height: 1.6;
  }

  body {
    font-size: 16px;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
    min-height: 100vh;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    font-size: 1.5rem;
    margin-top: 2rem;
  }

  h3 {
    font-size: 1.25rem;
    margin-top: 1.5rem;
  }

  p {
    margin-bottom: 1rem;
  }

  a {
    color: var(--text-color);
    text-decoration: underline;
    transition: all 0.2s ease;
  }

  a:hover {
    background-color: var(--text-color);
    color: var(--bg-color);
    text-decoration: none;
  }

  ul,
  ol {
    margin-left: 2rem;
    margin-bottom: 1rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  pre,
  code {
    font-family: inherit;
    background-color: #f5f5f5;
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
  }

  pre {
    padding: 1rem;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  hr {
    border: none;
    border-top: 1px solid var(--border-color);
    margin: 2rem 0;
  }

  .ascii-divider {
    text-align: center;
    margin: 2rem 0;
    color: var(--text-secondary);
  }

  @media (max-width: 600px) {
    body {
      padding: 1rem 0.5rem;
    }

    h1 {
      font-size: 1.75rem;
    }

    h2 {
      font-size: 1.25rem;
    }
  }
</style>
