---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Header />

  <main>
    <h1>contact</h1>

    <section class="contact-info">
      <p>
        Feel free to reach out if you'd like to collaborate on a project, have a
        question, or just want to say hello.
      </p>

      <div class="contact-methods">
        <div class="contact-grid">
          <div class="contact-item">
            <strong>Email:</strong>
            <a href="mailto:contact@thohui.com">contact@thohui.com</a>
          </div>

          <div class="contact-item">
            <strong>GitHub:</strong>
            <a href="https://github.com/thohui" target="_blank" rel="noopener"
              >github.com/thohui</a
            >
          </div>

          <div class="contact-item">
            <strong>LinkedIn:</strong>
            <a
              href="https://www.linkedin.com/in/thomas-huisman-2aba0b24a"
              target="_blank"
              rel="noopener">linkedin.com/in/thomas-huisman-2aba0b24a</a
            >
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .contact-grid {
    display: grid;
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .contact-item {
    display: flex;
    gap: 1rem;
    align-items: baseline;
  }

  .contact-item strong {
    min-width: 80px;
    color: var(--text-secondary);
  }

  .contact-methods,
  .response-time,
  .current-status {
    margin: 2.5rem 0;
  }

  .status-box {
    background-color: #f5f5f5;
    border: 1px solid var(--border-color);
    padding: 1rem;
    margin-top: 1rem;
  }

  .status-box p {
    margin-bottom: 0.5rem;
  }

  .status-box p:last-child {
    margin-bottom: 0;
  }

  .pgp-info {
    margin-top: 3rem;
  }

  .pgp-fingerprint {
    background-color: #f0f0f0;
    border: 1px solid var(--border-color);
    font-size: 0.875rem;
    margin-top: 0.5rem;
  }

  .pgp-link {
    font-size: 0.9rem;
    border: 1px solid var(--text-color);
    padding: 0.25rem 0.5rem;
    text-decoration: none;
    margin-left: 0.5rem;
  }

  .pgp-link:hover {
    background-color: var(--text-color);
    color: var(--bg-color);
  }

  @media (max-width: 600px) {
    .contact-item {
      flex-direction: column;
      gap: 0.25rem;
    }

    .contact-item strong {
      min-width: auto;
    }

    .status-box {
      padding: 0.75rem;
    }
  }
</style>
