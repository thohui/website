---
import githubIcon from "@/assets/github.svg";
import linkedinIcon from "@/assets/linkedin.svg";
import { Image } from "astro:assets";

import {
  Card,
  CardAction,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card.tsx";
---

<Card className="dark:bg-gray-800 shadow-md col-auto row-span-1">
  <CardContent className="flex flex-row gap-3 items-center">
    <Image src={githubIcon} alt="GitHub" class="w-8 h-8" />
    <Image src={linkedinIcon} alt="LinkedIn" class="w-8 h-8" />
  </CardContent>
</Card>
